<!--                <td style="text-align: center;color: #353534; font-weight: normal; padding-top: 0px; padding-bottom:20px; line-height: 20px;">-->
<!--                  <span style="font-weight: bold;">{{name}}<br/></span>{{date}}<br/>{{time}}<br/>General-->
<!--                </td>-->
<!--              </tr>-->
