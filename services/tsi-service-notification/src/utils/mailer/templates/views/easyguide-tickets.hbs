<!--                </td>-->
<!--              </tr>-->
<!--            {{/each}}-->
            <tr>
              <td>
                <table style="line-height: 24px; min-width: 65%;  background: #fff; color: #353534; font-weight: normal; padding: 15px 20px;border-radius: 10px; text-align: center; margin:0 auto;">
                  <tr><td style="padding-top: 10px"><a href="#"><img src="cid:{{attach 'tickets' 'ios_icon.png'}}" alt=""></a> <a href="#">
                    <img src="cid:{{attach 'tickets' 'google_play.png'}}" alt=""></a></td></tr>
                </table>
              </td>
            </tr>
          </table>
        </th>
      </tr>
      <tr>
        <td style="background: transparent; color: #fff;">
          <table cellpadding="0" cellspacing="0" width="100%">
            <tr>
              <td style="text-align: center; background: #ff6600; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px; padding: 10px 0">
                <a href="{{appDomain}}">
                  <img src="cid:{{attach 'tickets' 'easyguide1.png'}}" width="250px" alt="easyGuide">
                </a>
              </td>
            </tr>
            <tr><td style="font-size: 14px; background: #edf0f6; line-height: 15px; padding-top: 20px; padding-bottom: 5px; text-align: center; color: #000">
              10 Ansdell Street, Kensington, London, W8 5BN<br/> support@easy-guide.co.uk
            </td></tr>
            <tr><td style="font-size: 14px; text-align: center; background: #edf0f6">
              <table style="margin: auto;">
                <tr>
                  <td style="padding: 10px">
                    <a href="https://www.facebook.com/easyGuideUK/" style="text-decoration: none;">
                      <img src="cid:{{attach 'tickets' 'face.png'}}" alt="" width="50px">
                    </a>
                    <a href="https://www.instagram.com/easy_guide/">
                      <img src="cid:{{attach 'tickets' 'insta.png'}}" alt="" width="50px" style="text-decoration: none;">
                    </a>
                  </td>
                </tr>
              </table>
            </td></tr>
          </table>
        </td>
      </tr>
